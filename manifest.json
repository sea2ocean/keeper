{
  "manifest_version": 3,
  "name": "Keeper â€“ Notion Highlighter",
  "description": "Capture text from any webpage and sync it to Notion with project tagging.",
  "version": "1.0.0",
  "action": {
    "default_title": "Keeper",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["storage", "contextMenus", "identity", "activeTab", "scripting"],
  "host_permissions": ["https://api.notion.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "save-selection-to-notion": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Save current selection to Notion"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}